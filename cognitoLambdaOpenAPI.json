{
  "openapi": "3.0.0",
  "info": {
    "title": "[CELL_ID]: Cognito User Management Lambda",
    "description": "Accessible via the server URL provided in the front-end environment variable: VITE_[CELL_ID]Url. An API for managing Cognito users.",
    "version": "1.0.0"
  },
  "paths": {
    "/users": {
      "post": {
        "summary": "Perform user management actions",
        "security": [{ "CognitoAuth": [] }],
        "operationId": "userManagement",
        "x-amazon-apigateway-request-validator": "full",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/UserManagementRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Operation successful",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Bad request"
          },
          "405": {
            "description": "Method not allowed"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "CognitoAuth": {
        "type": "apiKey",
        "name": "Authorization",
        "in": "header",
        "x-amazon-apigateway-authtype": "jwt",
        "x-amazon-apigateway-authorizer": {
          "type": "jwt",
          "jwtConfiguration": {
            "issuer": {
              "Fn::Sub": "https://cognito-idp.${AWS::Region}.amazonaws.com/${[CELL_ID]UserPool}"
            },
            "audience": [
              {
                "Ref": "[CELL_ID]UserPoolClient"
              }
            ]
          },
          "identitySource": "$request.header.Authorization"
        }
      }
    },
    "security": [{ "CognitoAuth": [] }],
    "schemas": {
      "UserManagementRequest": {
        "type": "object",
        "properties": {
          "action": {
            "type": "string",
            "enum": [
              "createUser",
              "deleteUser",
              "updateUser",
              "resetPassword",
              "selfRegister"
            ]
          },
          "username": {
            "type": "string"
          },
          "password": {
            "type": "string"
          },
          "temporaryPassword": {
            "type": "string"
          }
        },
        "required": ["action", "username"],
        "additionalProperties": true
      }
    }
  },
  "x-amazon-apigateway-request-validators": {
    "full": {
      "validateRequestBody": true,
      "validateRequestParameters": true
    }
  },
  "x-amazon-apigateway-request-validator": "full"
}
