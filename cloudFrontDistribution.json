{
  "Resources": {
    "PublicSite": {
      "Type": "AWS::S3::Bucket",
      "Properties": {
        "BucketName": {
          "Fn::Sub": "${AWS::StackName}-origin-public-site"
        },
        "WebsiteConfiguration": {
          "IndexDocument": "index.html"
        }
      }
    },
    "PublicBucketPolicy": {
      "Type": "AWS::S3::BucketPolicy",
      "Properties": {
        "Bucket": {
          "Ref": "PublicSite"
        },
        "PolicyDocument": {
          "Version": "2012-10-17",
          "Statement": [
            {
              "Effect": "Allow",
              "Principal": {
                "Service": "apigateway.amazonaws.com"
              },
              "Action": "s3:GetObject",
              "Resource": {
                "Fn::Join": [
                  "",
                  [
                    "arn:aws:s3:::",
                    {
                      "Ref": "PublicSite"
                    },
                    "/*"
                  ]
                ]
              },
              "Condition": {
                "StringEquals": {
                  "aws:SourceArn": {
                    "Fn::Sub": "arn:aws:execute-api:${AWS::Region}:${AWS::AccountId}:${PublicApi.ApiId}/*"
                  }
                }
              }
            }
          ]
        }
      }
    },
    "ApiGatewayS3Role": {
      "Type": "AWS::IAM::Role",
      "Properties": {
        "AssumeRolePolicyDocument": {
          "Version": "2012-10-17",
          "Statement": [
            {
              "Effect": "Allow",
              "Principal": {
                "Service": "apigateway.amazonaws.com"
              },
              "Action": "sts:AssumeRole"
            }
          ]
        },
        "Policies": [
          {
            "PolicyName": "ApiGatewayS3AccessPolicy",
            "PolicyDocument": {
              "Version": "2012-10-17",
              "Statement": [
                {
                  "Effect": "Allow",
                  "Action": "s3:GetObject",
                  "Resource": {
                    "Fn::Join": [
                      "",
                      [
                        "arn:aws:s3:::",
                        {
                          "Ref": "PublicSite"
                        },
                        "/*"
                      ]
                    ]
                  }
                }
              ]
            }
          }
        ]
      }
    },
    "PublicApi": {
      "Type": "AWS::ApiGatewayV2::Api",
      "Properties": {
        "Name": "PublicSiteApi",
        "ProtocolType": "HTTP"
      }
    },
    "PublicApiStage": {
      "Type": "AWS::ApiGatewayV2::Stage",
      "Properties": {
        "ApiId": {
          "Ref": "PublicApi"
        },
        "StageName": "prod",
        "AutoDeploy": true
      }
    },
    "ApiIntegration": {
      "Type": "AWS::ApiGatewayV2::Integration",
      "Properties": {
        "ApiId": { "Ref": "PublicApi" },
        "IntegrationType": "AWS",
        "IntegrationUri": {
          "Fn::Sub": "arn:aws:apigateway:${AWS::Region}:s3:path/${PublicSite}"
        },
        "CredentialsArn": { "Fn::GetAtt": ["ApiGatewayS3Role", "Arn"] },
        "RequestParameters": {
          "overwrite.header.Host": {
            "Fn::Sub": "${PublicSite}.s3.amazonaws.com"
          }
        },
        "PayloadFormatVersion": "1.0"
      }
    },
    "ApiRoute": {
      "Type": "AWS::ApiGatewayV2::Route",
      "Properties": {
        "ApiId": {
          "Ref": "PublicApi"
        },
        "RouteKey": "GET /{proxy+}",
        "Target": {
          "Fn::Join": [
            "/",
            [
              "integrations",
              {
                "Ref": "ApiIntegration"
              }
            ]
          ]
        }
      }
    },
    "ApiCustomDomain": {
      "Type": "AWS::ApiGatewayV2::DomainName",
      "Properties": {
        "DomainName": "[SOLUTION_SUB_DOMAIN].theorigin.ai",
        "DomainNameConfigurations": [
          {
            "CertificateArn": "arn:aws:acm:eu-central-1:360520317360:certificate/95ccd728-1b70-4db5-9d23-3e871f1f25ca",
            "EndpointType": "REGIONAL"
          }
        ]
      }
    },
    "ApiDomainMapping": {
      "Type": "AWS::ApiGatewayV2::ApiMapping",
      "Properties": {
        "DomainName": {
          "Ref": "ApiCustomDomain"
        },
        "ApiId": {
          "Ref": "PublicApi"
        },
        "Stage": {
          "Ref": "PublicApiStage"
        }
      }
    },
    "PerEnvironmentRoute53Record": {
      "Type": "AWS::Route53::RecordSetGroup",
      "Properties": {
        "HostedZoneId": "Z0774359MJ4TNSWB6K7M",
        "RecordSets": [
          {
            "Name": "[SOLUTION_SUB_DOMAIN].theorigin.ai",
            "Type": "A",
            "AliasTarget": {
              "HostedZoneId": {
                "Fn::GetAtt": ["ApiCustomDomain", "RegionalHostedZoneId"]
              },
              "DNSName": {
                "Fn::GetAtt": ["ApiCustomDomain", "RegionalDomainName"]
              }
            }
          }
        ]
      }
    }
  }
}
