{
  "Resources": {
    "PublicSite": {
      "Type": "AWS::S3::Bucket",
      "Properties": {
        "BucketName": {
          "Fn::Sub": "${AWS::StackName}-origin-public-site"
        },
        "WebsiteConfiguration": {
          "IndexDocument": "index.html"
        }
      }
    },
    "PublicBucketPolicy": {
      "Type": "AWS::S3::BucketPolicy",
      "Properties": {
        "Bucket": {
          "Ref": "PublicSite"
        },
        "PolicyDocument": {
          "Version": "2012-10-17",
          "Statement": [
            {
              "Effect": "Allow",
              "Principal": "*",
              "Action": "s3:GetObject",
              "Resource": {
                "Fn::Join": [
                  "",
                  [
                    "arn:aws:s3:::",
                    {
                      "Ref": "PublicSite"
                    },
                    "/*"
                  ]
                ]
              }
            }
          ]
        }
      }
    },
    "PublicApi": {
      "Type": "AWS::ApiGatewayV2::Api",
      "Properties": {
        "Name": "PublicSiteApi",
        "ProtocolType": "HTTP",
        "Target": {
          "Fn::Sub": "http://${PublicSite}.s3-website.${AWS::Region}.amazonaws.com"
        }
      }
    },
    "PublicApiStage": {
      "Type": "AWS::ApiGatewayV2::Stage",
      "Properties": {
        "ApiId": {
          "Ref": "PublicApi"
        },
        "StageName": "prod",
        "AutoDeploy": true
      }
    },
    "ApiCustomDomain": {
      "Type": "AWS::ApiGatewayV2::DomainName",
      "Properties": {
        "DomainName": "[SOLUTION_SUB_DOMAIN].theorigin.ai",
        "DomainNameConfigurations": [
          {
            "CertificateArn": "arn:aws:acm:us-east-1:360520317360:certificate/b23c0b4f-7565-487f-8162-758df988aede",
            "EndpointType": "REGIONAL"
          }
        ]
      }
    },
    "ApiDomainMapping": {
      "Type": "AWS::ApiGatewayV2::ApiMapping",
      "Properties": {
        "DomainName": {
          "Ref": "ApiCustomDomain"
        },
        "ApiId": {
          "Ref": "PublicApi"
        },
        "Stage": {
          "Ref": "PublicApiStage"
        }
      }
    },
    "PerEnvironmnetRoute53Record": {
      "Type": "AWS::Route53::RecordSetGroup",
      "Properties": {
        "HostedZoneId": "Z0774359MJ4TNSWB6K7M",
        "RecordSets": [
          {
            "Name": "[SOLUTION_SUB_DOMAIN].theorigin.ai",
            "Type": "A",
            "AliasTarget": {
              "HostedZoneId": {
                "Fn::GetAtt": ["ApiCustomDomain", "RegionalHostedZoneId"]
              },
              "DNSName": {
                "Fn::GetAtt": ["ApiCustomDomain", "DomainName"]
              }
            }
          }
        ]
      }
    }
  }
}
